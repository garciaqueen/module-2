<div class="guest-book-page-content">

  {# Form section #}
  {% if form %}
    <div class="guest-book-form-section mb-4">
      <h3>{{ 'Add Your Review'|t }}</h3>
      {{ form }}
    </div>
    <hr>
  {% endif %}

  {# Reviews list section #}
  <div class="reviews container">
    {% if reviews is empty %}
      <p>No reviews yet.</p>
    {% else %}
      <div class="row g-4">
        {% for review in reviews %}
          <div class="col-12 col-md-6 col-lg-4">
            <div class="review-card p-3 border rounded shadow-sm d-flex flex-column">
              {# 1. User info + Date #}
              <div class="user-info d-flex align-items-center mb-2">
                <div class="avatar-wrapper me-2 rounded-circle">
                  {% if review.avatar %}
                    <img src="{{ review.avatar }}" alt="Avatar" class="avatar-img rounded-circle">
                  {% else %}
                    <div class="avatar-placeholder rounded-circle bg-secondary"></div>
                  {% endif %}
                </div>
                <div class="flex-grow-1">
                  <div class="fw-bold">{{ review.name }}</div>
                  <div class="text-muted small">{{ review.created|date("m/d/Y H:i") }}</div>
                </div>
              </div>

              {# 2. Review text #}
              <div class="review-text mb-2">
                {{ review.comment ?? '' }}
              </div>

              {# Review image if exists #}
              {% if review.image %}
                <img src="{{ review.image }}" alt="Review image" class="review-image rounded mb-2" style="max-height:150px; max-width:100%; object-fit:contain;">
              {% endif %}

              {# 3. Contact info #}
              <div class="contact-info text-muted small">
                {{ review.email }}
              </div>

              {# Admin buttons #}
              {% if 'administrator' in user.roles %}
                <div class="buttons d-flex gap-2 mt-2">
                  <a href="/guest-book/{{ review.id }}/edit" class="btn btn-sm btn-primary">Edit</a>
                  <a href="/guest-book/{{ review.id }}/confirm-delete" class="btn btn-sm btn-danger use-ajax"
                    data-dialog-type="modal" data-dialog-options='{"width":300}'>Delete</a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>

</div>